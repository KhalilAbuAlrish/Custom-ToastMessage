<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToastMessage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>





    <style name="exampleToast">

        <item name="stTextBold">true</item>
        <item name="stTextColor">@android:color/holo_green_dark</item>
        <item name="stTextSize">14dp</item>

        <item name="stColorBackground">@android:color/white</item>
        <item name="stStrokeColor">@android:color/black</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="cornerRadius">5dp</item>

        <item name="stIconStart">@drawable/ic_android_black_24dp</item>
        <item name="stIconEnd">@drawable/ic_android_black_24dp</item>
        <item name="stLength">LONG</item>




    </style>


</resources>